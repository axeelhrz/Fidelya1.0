# ===========================================
# CONFIGURACIÓN DE FRUTERÍA NINA
# ===========================================

# Entorno de ejecución (development, production, testing)
FLASK_ENV=development
FLASK_DEBUG=true

# Seguridad
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_EXPIRATION_HOURS=24
JWT_ALGORITHM=HS256

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=fruteria_nina
DB_PASSWORD=your_db_password_here
DB_NAME=fruteria_nina
DB_CHARSET=utf8mb4
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30

# Redis (Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fruteria_nina.log

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_NAME=Frutería Nina

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Seguridad y Rate Limiting
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE=10485760
BLOCKED_IPS_FILE=blocked_ips.txt

# Cache
CACHE_DEFAULT_TTL=3600
CACHE_ENABLED=true

# Archivos
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif

# Monitoreo
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================
# Para producción, asegúrate de:
# 1. Cambiar SECRET_KEY por una clave única y segura
# 2. Usar contraseñas fuertes para DB_PASSWORD y REDIS_PASSWORD
# 3. Configurar SMTP_USER y SMTP_PASSWORD para notificaciones
# 4. Establecer FLASK_ENV=production
# 5. Configurar LOG_FILE para persistir logs
# 6. Revisar y ajustar RATE_LIMIT_PER_MINUTE según necesidades