{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_TYPE": "mysql",
    "MYSQL_HOST": "@mysql_host",
    "MYSQL_PORT": "@mysql_port", 
    "MYSQL_USER": "@mysql_user",
    "MYSQL_PASSWORD": "@mysql_password",
    "MYSQL_DATABASE": "@mysql_database",
    "MYSQL_SSL": "@mysql_ssl"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate=300"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/menu/:id",
      "destination": "/menu?id=:id"
    }
  ]
}
