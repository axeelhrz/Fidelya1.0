{
  "name": "starflex-css-optimization",
  "version": "1.0.0",
  "description": "OptimizaciÃ³n y limpieza del CSS de StarFlex",
  "main": "index.js",
  "scripts": {
    "audit": "node scripts/css-audit.js",
    "lint": "stylelint 'css/**/*.css' --formatter verbose",
    "lint:fix": "stylelint 'css/**/*.css' --fix",
    "autoprefixer": "postcss css/style.css --use autoprefixer --output css/style.prefixed.css",
    "purge": "purgecss --config purgecss.config.js",
    "build:dev": "postcss css/style.css --config postcss.config.js --output dist/style.dev.css --map",
    "build:prod": "postcss css/style.css --config postcss.config.js --output dist/style.min.css --env production",
    "organize": "node scripts/organize-css.js",
    "test:visual": "node scripts/visual-test.js",
    "optimize": "node scripts/optimize-css.js",
    "optimize:quick": "npm run lint:fix && npm run build:prod",
    "dev": "npm run build:dev && npm run test:visual",
    "clean": "rimraf dist/ css-modules/ reports/",
    "report": "npm run audit && npm run lint > reports/lint-report.txt",
    "backup": "cp css/style.css backup/style-$(date +%Y%m%d-%H%M%S).css",
    "restore": "cp backup/style-original.css css/style.css",
    "compare": "node scripts/compare-css.js",
    "validate": "npm run lint && npm run test:visual",
    "deploy:prep": "npm run optimize && npm run validate",
    "help": "echo 'Comandos disponibles: audit, lint, organize, optimize, build:dev, build:prod, test:visual, clean, backup, restore'"
  },
  "devDependencies": {
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-high-performance-animation": "^1.8.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "purgecss": "^5.0.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "cssnano": "^6.0.1",
    "clean-css": "^5.3.2",
    "clean-css-cli": "^5.6.2",
    "css-tree": "^2.3.1",
    "css-what": "^6.1.0",
    "puppeteer": "^21.5.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "rimraf": "^5.0.5",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "iOS >= 12",
    "Android >= 8",
    "Safari >= 12",
    "Chrome >= 80",
    "Firefox >= 75",
    "Edge >= 80",
    "not dead"
  ],
  "keywords": [
    "css",
    "optimization",
    "starflex",
    "performance",
    "mobile-first"
  ],
  "author": "StarFlex Team",
  "license": "MIT"
}